{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "es2018",
      "DOM"
    ],
    "module": "CommonJS",
    "esModuleInterop": false,
    "target": "ES2018",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": [
      "node",
      "jest"
    ],
    "forceConsistentCasingInFileNames": false,
    "noImplicitReturns": false,
    "alwaysStrict": false,
    "strictFunctionTypes": false
  },
  "include": [
    "src",
    "routes"
  ]
}