{
  "name": "grepawk",
  "version": "1.0.1",
  "description": "simple websockets for reading and writing into azure blob service",
  "main": "dist/index.js",
  "author": "Yisheng Jiang",
  "license": "ISC",
  "dependencies": {
    "azure-storage": "^2.10.3",
    "mime": "^2.4.6",
    "mysql": "^2.18.1",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6",
    "ws.js": "^1.0.0",
    "xaa": "^1.6.0",
    "xclap": "^0.2.51"
  },
  "scripts": {
    "start": "node ./src/index.ts",
    "start:sig": "node --inspect=5858 -r ts-node/register ./src/signal_broker.ts",
    "start:watch": "nodemon",
    "build": "tsc",
    "test": "tsc && jest src/azfs.test.js"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "files": [
    "dist",
    "lib"
  ]
}
