{
  "name": "grepawk",
  "version": "1.0.1",
  "description": "simple websockets for reading and writing into azure blob service",
  "main": "dist/index.js",
  "author": "Yisheng Jiang",
  "license": "ISC",
  "dependencies": {
    "@types/mysql": "^2.15.14",
    "azure-storage": "^2.10.3",
    "forever": "^3.0.0",
    "jest": "^26.1.0",
    "mime": "^2.4.6",
    "mysql": "^2.18.1",
    "ws.js": "^1.0.0"
  },
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "start:sig": "node --inspect=5858 -r ts-node/register ./src/signal_broker.ts",
    "start:watch": "nodemon",
    "build": "tsc"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.7.6",
    "@types/sinon": "^9.0.0",
    "@types/sinon-chai": "^3.2.4",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "@xarc/module-dev": "^2.1.2",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-walmart": "^2.2.1",
    "eslint-plugin-filenames": "^1.1.0",
    "eslint-plugin-jsdoc": "^21.0.0",
    "fastify-cli": "^1.5.0",
    "mocha": "^7.1.0",
    "nyc": "^15.0.0",
    "sinon": "^7.2.6",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "typedoc": "^0.17.4",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "xaa": "^1.6.0"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register",
      "@xarc/module-dev/config/test/setup.js"
    ],
    "recursive": true
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "files": [
    "dist",
    "lib"
  ]
}
